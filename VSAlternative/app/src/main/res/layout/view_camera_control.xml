<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:columnCount="3"
    app:orientation="horizontal"
    app:rowCount="3">

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/camera_control_left_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_left_up"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/camera_control_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_up"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/camera_control_right_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_right_up"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/camera_control_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_left"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/camera_control_minimize"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/d10"
        android:scaleType="fitCenter"
        android:src="@drawable/button_minimize_cam"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/camera_control_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_right"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/camera_control_left_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_left_down"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/camera_control_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_down"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <com.alexvasilkov.gestures.views.GestureImageView
        android:id="@+id/camera_control_right_down"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_right_down"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

</android.support.v7.widget.GridLayout>
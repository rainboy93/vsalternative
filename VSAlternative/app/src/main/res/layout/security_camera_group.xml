<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/security_group_camera_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d50">

    <ImageView
        android:id="@+id/security_group_camera_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        android:padding="@dimen/d10"
        android:src="@drawable/camera_icon" />

    <in.workarounds.typography.TextView
        android:id="@+id/security_group_camera_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/security_group_camera_icon"
        app:font_name="@string/font_name"
        app:font_variant="@string/font_regular" />

    <ImageButton
        android:id="@+id/security_group_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:src="@drawable/selector_group_expand" />

    <View
        android:id="@+id/security_group_camera_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_background"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:padding="@dimen/d20"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <vn.com.vshome.view.NonSwipeViewPager
        android:id="@+id/account_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/login_hint"
        android:layout_below="@+id/login_logo" />

    <in.workarounds.typography.TextView
        android:id="@+id/login_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/d10"
        android:layout_marginTop="@dimen/d10"
        android:gravity="center_horizontal"
        android:text="Bản quyền thuộc về VSHOME Technologies., 2015"
        android:textColor="@color/white"
        android:textSize="@dimen/d10"
        app:font_name="OpenSans"
        app:font_variant="Regular" />

</RelativeLayout>

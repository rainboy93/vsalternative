<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lighting_scene_day_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/d10">

    <in.workarounds.typography.ToggleButton
        android:id="@+id/lighting_scene_day_toggle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/date_selector"
        android:checked="true"
        android:textColor="@drawable/date_toggle_color"
        android:textSize="@dimen/d16"
        app:font_name="@string/font_name"
        app:font_variant="@string/font_regular" />
</RelativeLayout>


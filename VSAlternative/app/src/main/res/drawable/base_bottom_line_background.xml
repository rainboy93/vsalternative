<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:left="-1px"
        android:right="-1px"
        android:top="-1px">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1px"
                android:color="@color/gray" />
        </shape>
    </item>

</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    package="vn.com.vshome">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".VSHome"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tool:replace="android:theme">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".account.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="vn.com.vshome.db" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="vn.com.vshome" />

        <activity
            android:name=".lightingcontrol.LightingControlActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".lightingcontrol.LightingSceneActivity" />
        <activity
            android:name=".user.UserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".roomselection.RoomSelectionActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CropActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".security.SecurityActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".user.UserActionActivity" />
        <activity
            android:name=".security.FullPreviewActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar.FullScreen"></activity>

        <service
            android:name=".security.PreviewService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>